datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model PostApp {
  author        String?
  content       String?
  createdAt     DateTime @default(now())
  featuredImage String?
  id            String   @id @default(cuid())
  tags          String?
  title         String?
  updatedAt     DateTime @updatedAt
}