datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  name      PostApp?  @relation(name: "tags", fields: [nameId], references: [id])
  nameId    String?
  password  String
  posts     PostApp[] @relation(name: "posts")
  roles     String[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model PostApp {
  author        String?
  content       String?
  createdAt     DateTime @default(now())
  featuredImage String?
  id            String   @id @default(cuid())
  name          String?
  tags          User[]   @relation(name: "tags")
  title         String?
  updatedAt     DateTime @updatedAt
  user          User?    @relation(name: "posts", fields: [userId], references: [id])
  userId        String?
}